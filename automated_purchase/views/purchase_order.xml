<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Customers -->
  <record id="purchase_order_form_invoice_inherit" model="ir.ui.view">
    <field name="name">purchase.order.form.invoice</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='company_id']" position="after">
        <field name="invoice_id" string="Created from Invoice" class="oe_highlight" type="object"/>
      </xpath>

    </field>
  </record>

</odoo>
